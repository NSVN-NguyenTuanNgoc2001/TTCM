<!--                                android:padding="5dp">-->

<!--                                <TextView-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_gravity="center|left"-->
<!--                                    android:layout_marginLeft="20dp"-->
<!--                                    android:text="Tổng cộng"-->
