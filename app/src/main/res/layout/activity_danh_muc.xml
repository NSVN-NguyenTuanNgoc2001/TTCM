<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/fifth"
    android:orientation="vertical"
    tools:context=".activity.DanhMucActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fifth"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_Danhmuc"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:navigationIcon="@drawable/ic_back_button"
                app:title="Danh má»¥c"
                app:titleTextColor="@color/white">

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="openCart">

                        <ImageView
                            android:id="@+id/miniCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_cart" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="22dp"
                            android:background="@color/cost_color"
                            android:elevation="10dp"
                            app:cardCornerRadius="100dp">

                            <TextView
                                android:id="@+id/thongbao_soluong"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cost_color"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:visibility="visible" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/third">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:onClick="ToHome">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/logo_app" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dancing_script_medium"
                        android:paddingBottom="3dp"
                        android:text="App Food"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <GridView
                android:id="@+id/gridView_DanhMuc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:numColumns="2" />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>