<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context=".activity.MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#FFFFE6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_Home"
                app:title="Trang chủ"
                app:navigationIcon="@drawable/menu"
                app:titleTextColor="@color/white"
                android:background="#36622B"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <FrameLayout
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:layout_width="70dp"
                    android:layout_height="?attr/actionBarSize">
                    <FrameLayout

                        android:layout_gravity="center"
                        android:onClick="openCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/miniCart"
                            android:src="@drawable/cart"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:elevation="10dp"
                            android:layout_gravity="top|left"
                            app:cardCornerRadius="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="22dp"
                            android:background="#FF3333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/thongbao_soluong"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FF3333"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:visibility="visible" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#C6E377">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/dish" />

                    <TextView
                        android:layout_width="116dp"
                        android:layout_height="match_parent"
                        android:fontFamily="cursive"
                        android:paddingRight="5dp"

                        android:paddingBottom="3dp"
                        android:text="AppFooter"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:elevation="10dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ViewFlipper
                    android:id="@+id/viewFlipper"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:src="@drawable/bannerscreen01"
                        android:layout_height="match_parent">

                    </ImageView>
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/bannerscreen03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ImageView>
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ImageView>
                </ViewFlipper>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:background="#FFFFE6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Món ngon mỗi ngày"
                    android:gravity="center"
                    android:textColor="#729D39"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <GridView
                    android:id="@+id/lstmonan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"

                    android:horizontalSpacing="5dp"

                    android:padding="5dp">

                </GridView>

            </LinearLayout>
        </LinearLayout>

        <!-- navigation bar-->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_gravity="start"
            android:background="#FFFFE6"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#36622B"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:src="@drawable/logo"
                        android:layout_marginTop="70dp"
                        android:layout_width="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:text="AppFood"
                        android:textColor="#FFFFE6"
                        android:padding="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textSize="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/listView_NavHome"
                    android:padding="5dp"
                    android:divider="#00FFFFFF"
                    android:dividerHeight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>